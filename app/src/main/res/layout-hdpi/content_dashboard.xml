<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="arquitetossemcracha.example.com.appdeassistencia2.Dashboard"
    tools:showIn="@layout/activity_dashboard">

    <Button
        android:id="@+id/como_funciona"
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/botao_redondo"
        android:text="@string/como_funciona"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cadastre"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/quem_somos"
        app:layout_constraintTop_toBottomOf="@+id/cadastre" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/botao"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/botao"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/cadastre"
        android:layout_width="203dp"
        android:layout_height="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/botao_redondo"
        android:text="@string/cadastre_se"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/sugestoes"
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao_redondo"
        android:text="@string/sugestoes"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/quem_somos"
        app:layout_constraintTop_toBottomOf="@+id/quem_somos" />

    <Button
        android:id="@+id/noticias"
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao_redondo"
        android:text="@string/noticias"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/como_funciona"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/sugestoes"
        app:layout_constraintTop_toBottomOf="@+id/como_funciona" />

    <Button
        android:id="@+id/quem_somos"
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/botao_redondo"
        android:text="@string/quem_somos"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/cadastre"
        app:layout_constraintTop_toBottomOf="@+id/cadastre" />
</android.support.constraint.ConstraintLayout>